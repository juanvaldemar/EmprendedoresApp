<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_item_recycler_structure_h"
    android:layout_width="140dp"
    android:layout_height="140dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:padding="10dp"
        android:foregroundGravity="center"
        android:scaleType="centerCrop" />

    <FrameLayout
        android:id="@+id/item_recycler_structure_background_h"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha=".0"
        android:background="@color/black" />

    <TextView
        android:id="@+id/title_album"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_above="@+id/item_recycler_structure_linear_h"
        android:layout_marginLeft="8dp"
        android:gravity="left"
        android:text="TÃ­tulo"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/item_recycler_structure_linear_h"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/black"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/category_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:text="Categoria"
            android:textColor="#dadada"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="2dp"
            android:gravity="center"
            android:text="por"
            android:textColor="#dadada"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/send_by_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:gravity="center"
            android:text="Publicado por:"
            android:textColor="#dadada"
            android:textSize="14sp" />

    </LinearLayout>


    <TextView
        android:id="@+id/item_recycler_structure_desc_h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</RelativeLayout>

