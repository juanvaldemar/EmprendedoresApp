<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:background="#000000">


    <LinearLayout
        android:id="@+id/linearAccesso"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical"
            android:gravity="center|top">

            <ImageView
                android:layout_width="140dp"
                android:layout_height="180dp"
                android:background="#eee"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/splash_text_spook"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:text="Emprendedores App"
                android:textSize="30sp"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:textColor="#eee"
                android:layout_below="@+id/image_logo_splash"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:text="Lorem ipsum dolor sit amet, consectmagna aliqua. Ut enim"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="280dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="4"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/accesso_login_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14dp"
                android:hint="INGRESE SU CORREO"
                android:inputType="textEmailAddress"
                android:textColor="@color/white"
                android:textColorHint="#eee"
                android:gravity="left"
                />

            <EditText
                android:id="@+id/accesso_login_password"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="14dp"
                android:hint="INGRESE SU CONTRASEÑA"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:gravity="left"
                />

            <Button
                android:id="@+id/accesso_login_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Acceder"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:background="@color/rojo_spook"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/acceso_reinicio_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:text="¿No tienes una cuenta?, "/>

                <TextView
                    android:id="@+id/acceso_create_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text=" Create una cuenta."
                    android:textColor="#da152c"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"

                    android:layout_marginTop="10dp"
                    android:text="¿Olvidate tu contraseña?, "/>
                <TextView
                    android:id="@+id/acceso_forget_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text=" Click Aquí."
                    android:textColor="#da152c"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="0dp"
                android:color="@color/white"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:gravity="center"
                    android:id="@+id/login_button"
                    android:layout_width="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_height="50dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:paddingLeft="25dp"
                    android:paddingRight="20dp"
                    android:text="F"
                    android:background="@drawable/radius_button"
                    android:color="@color/black"
                    />

                <View
                    android:layout_width="50dp"
                    android:layout_height="10dp"/>

                <Button
                    android:gravity="center"
                    android:id="@+id/login_button2"
                    android:layout_width="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_height="50dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:paddingLeft="25dp"
                    android:paddingRight="20dp"
                    android:text="G"
                    android:background="@drawable/radius_button"
                    android:color="@color/black"
                    />

            </LinearLayout>

            <FrameLayout
                android:visibility="gone"
                android:id="@+id/accessRelatoGoogle"
                android:layout_width="280dp"
                android:layout_height="48dp"
                android:background="@drawable/sing_google_design"
                android:gravity="center"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:clickable="false"
                    android:gravity="center"
                    android:text="Continuar con google"
                    android:textColor="@color/white" />
            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>