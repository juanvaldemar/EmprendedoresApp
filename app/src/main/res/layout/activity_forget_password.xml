<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/forgetRelato">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:alpha="0.7">

    </FrameLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"

        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/forget_title_sangrienta_lectura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:textSize="25sp"

            android:text="Recuperar contraseña"
            android:gravity="center"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="16dp"
            android:layout_marginBottom="20dp"
            android:text="Para recuperar su contraseña ingrese su correo electronico registrado en el app."/>


        <LinearLayout
            android:id="@+id/relato_forget_body"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                app:passwordToggleTint="@color/black"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/forget_user_email"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:padding="14dp"
                    android:textSize="14dp"
                    android:hint="INGRESE SU EMAIL"
                    android:textColor="@color/black"
                    android:background="@drawable/design_one"
                    android:textColorHint="@color/black"
                    android:gravity="left"
                    />

            </com.google.android.material.textfield.TextInputLayout>



        </LinearLayout>

        <FrameLayout
            android:id="@+id/forgetPasswordCuenta"
            android:layout_marginTop="40dp"
            android:layout_width="280dp"
            android:background="@color/black"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="22dp"
                android:clickable="false"
                android:src="@drawable/ic_mail" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="false"
                android:textSize="14dp"
                android:gravity="center"
                android:text="RECUPERAR CONTRASEÑA"
                android:textColor="@color/white" />
        </FrameLayout>



    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
